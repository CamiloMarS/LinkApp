<div class="container p-4">
     <div class="row">
          <div class="col-md-4 mx-auto">
               <div class="card bg-blue-king">
                    <div class="card-body">
                         <form action="/links/edit/{{link.id}}" method="POST">
                              <span class="form-title">Editar Link {{link.title}}</span>
                              <div class="form-group">
                                   <label for="title">Título de página</label>
                                   <input type="text" class="form-control" name="title" placeholder="Title" autofocus value="{{link.title}}"/>
                              </div>
                              <div class="form-group">
                                   <label for="url">URL de página</label>
                                   <input type="url" name="url" class="form-control" placeholder="URL" value="{{link.url}}">
                              </div>
                               <div class="form-group">
                                    <label for="description">Descripción</label>
                                   <textarea name="description" rows="2" class="form-control" placeholder="Description">{{link.descripcion}}</textarea>
                              </div>
                              <div class="form-group">
                                   <input type="submit" value="Save" class="btn btn-primary btn-block">
                              </div>
                         </form>
                    </div>
               </div>
          </div>
     </div>
</div>