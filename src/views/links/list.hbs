<div class="container p-4">
     <div class="row">
               <!-- Recorrer la lista de links de la consulta -->
               {{#each links_pages}}
                  <div class="col-md-4">
                       <div class="card text-center ">
                            <div class="card-body">
                                 <a href="{{this.url}}" target="_blank">
                                      <h3 class="card-title text-uppercase">{{this.title}}</h3>
                                 </a>
                                 <p class="m-2">{{descripcion}}</p>
                                 <p class="">{{timeago this.created_at}}</p>
                                 <a href="/links/delete/{{id}}" class="btn btn-danger">Delete</a>
                                 <a href="/links/edit/{{id}}" class="btn btn-primary">Edit</a>
                            </div>
                       </div>
                  </div> 

                  {{else}}

                    <div class="col-md-4 mx-auto">
                         <div class="card card-body text-center">
                              <p>There are not links saved yet.</p>   
                              <a href="/links/add" class="btn btn-success">Crear link</a>
                         </div>
                    </div>

               {{/each}}
     </div>
</div>